<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutDialogConfiguracion2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDialog2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textTitle_layout_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title__warning_background"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Cambiar Diseño"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/contenedorprimerafila"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contenedorprimerafila"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/contenedorsegundafila"
            app:layout_constraintTop_toBottomOf="@+id/textTitle_layout_color">

            <LinearLayout
                android:id="@+id/Layoutcolores"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:background="@drawable/custom_border"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Colores Estados de Comandas y Texto"
                    android:textAlignment="center"
                    android:textSize="10dp"
                    android:textStyle="bold">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <TextView
                            android:id="@+id/tvcolorpendiente"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:background="#ffffffff"/>
                        <TextView
                            android:id="@+id/tvcolorpendientetext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:text="Pendiente"
                            android:textSize="10sp"
                            android:paddingStart="5dp"/>
                        <TextView
                            android:id="@+id/tvcoloratencion"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:background="#ffffffff"/>
                        <TextView
                            android:id="@+id/tvcoloratenciontext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:text="Atención"
                            android:textSize="10sp"
                            android:paddingStart="5dp"/>
                        <TextView
                            android:id="@+id/tvcolorporentregar"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:background="#ffffffff"/>
                        <TextView
                            android:id="@+id/tvcolorporentregartexto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:text="X Entregar"
                            android:textSize="10sp"
                            android:paddingStart="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvcolorentregada"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:background="#ffffffff"/>
                        <TextView
                            android:id="@+id/tvcolorentregadatext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:text="Entregada"
                            android:textSize="10sp"
                            android:paddingStart="5dp"/>
                        <TextView
                            android:id="@+id/tvcoloranulada"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:background="#ffffffff"/>
                        <TextView
                            android:id="@+id/tvcoloranuladatext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:text="Anulada"
                            android:textSize="10sp"
                            android:paddingStart="5dp"/>
                        <TextView
                            android:id="@+id/tvcolortexto"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:background="#ffffffff"/>
                        <TextView
                            android:id="@+id/tvcolortextotext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:text="Texto"
                            android:textSize="10sp"
                            android:paddingStart="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contenedorsegundafila"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintTop_toBottomOf="@+id/contenedorprimerafila">

            <LinearLayout
                android:id="@+id/Layoutorigen"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:background="@drawable/custom_border"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Filas/Columnas/tamaño Texto"
                    android:textAlignment="center"
                    android:textSize="10dp"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edtcolumnas"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvcolumnas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:text="Cant. Columnas"
                            android:textSize="10sp" />

                        <EditText
                            android:id="@+id/edtfilas"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvfilas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:text="Cant. Filas"
                            android:textSize="10sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/edtttexto"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvttexto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:text="Tamaño Texto General"
                            android:textSize="10sp" />

                        <EditText
                            android:id="@+id/edtttextoampli"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvttextoampli"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:text="Tamaño Texto Ampliado"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/buttonNodiseno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="40dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_warning_background"
        android:text="Cancelar"
        android:textColor="@color/colorWhite"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/layoutDialog2"
        app:layout_constraintEnd_toStartOf="@+id/buttonYesdiseno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutDialog2" />

    <Button
        android:id="@+id/buttonYesdiseno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_warning_background"
        android:text="Guardar"
        android:textColor="@color/colorWhite"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/layoutDialog2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonNodiseno"
        app:layout_constraintTop_toBottomOf="@+id/layoutDialog2" />
</androidx.constraintlayout.widget.ConstraintLayout>