<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/button_focused_selector.xml -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="40dp"/>
            <!-- Cambia el color de fondo o el estilo del botón enfocado aquí -->
            <solid android:color="@color/colorError" /> <!-- Color rojo como ejemplo -->
        </shape>
    </item>
    <item>
        <!-- Deja el fondo o estilo predeterminado para el botón no enfocado aquí -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@color/colorWarning"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</selector>
