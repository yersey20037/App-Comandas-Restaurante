<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="#CDCDCD"
        android:focusable="true"
        android:descendantFocusability="afterDescendants"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/estados_totales"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textcomandassiges">
    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:id="@+id/textcomandassiges"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="#3F51B5"
        android:gravity="center"
        android:text="COMANDAS SIGES"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rv1"/>
    <ImageButton
        android:id="@+id/btnreload"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="recargarconboton"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@id/textcomandassiges"
        app:layout_constraintEnd_toEndOf="@id/textcomandassiges"
        app:layout_constraintStart_toStartOf="@id/textcomandassiges"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:srcCompat="@drawable/historico"
        android:background="@drawable/transparent_background"/>
    <ImageButton
        android:id="@+id/btnvistas"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@id/textcomandassiges"
        app:layout_constraintEnd_toStartOf="@id/btnreload"
        app:layout_constraintStart_toStartOf="@id/textcomandassiges"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:srcCompat="@drawable/evaluacion"
        android:visibility="gone"/>
    <ImageButton
        android:id="@+id/btnconfig"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@id/textcomandassiges"
        app:layout_constraintEnd_toEndOf="@id/textcomandassiges"
        app:layout_constraintStart_toStartOf="@id/textcomandassiges"
        app:layout_constraintTop_toTopOf="@id/textcomandassiges"
        app:layout_constraintHorizontal_bias="0"
        app:srcCompat="@drawable/pngaaa_com_371772"
        android:visibility="gone"/>
    <ImageButton
        android:id="@+id/btncolor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="recargarconboton"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@id/textcomandassiges"
        app:layout_constraintEnd_toEndOf="@id/textcomandassiges"
        app:layout_constraintStart_toEndOf="@id/btnconfig"
        app:layout_constraintTop_toTopOf="@id/textcomandassiges"
        app:layout_constraintHorizontal_bias="0"
        app:srcCompat="@drawable/painting"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/estados_totales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/empresa"
        app:layout_constraintTop_toBottomOf="@+id/rv1">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/estados_historico"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/entregadas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#FF9900"
                android:layout_marginStart="5dp"
                android:text="ENTREGADA"
                android:textAlignment="center"
                android:textColor="#252850"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/anuladas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/anuladas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="#FFFF00"
                android:text="ANULADA"
                android:textAlignment="center"
                android:textColor="#252850"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/entregadas"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/estados"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/pendiente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FF9900"
            android:layout_marginStart="5dp"
            android:text="PENDIENTE"
            android:textAlignment="center"
            android:textColor="#252850"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/atencion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/atencion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="#FFFF00"
            android:text="ATENCIÓN"
            android:textAlignment="center"
            android:textColor="#252850"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/entrega"
            app:layout_constraintStart_toEndOf="@id/pendiente">

        </TextView>

        <TextView
            android:id="@+id/entrega"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="#00FF00"
            android:text="POR ENTREGAR"
            android:textAlignment="center"
            android:textColor="#252850"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/atencion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/empresa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:background="#3F51B5"
        android:text="Zona Informatica Perú SAC"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintVertical_bias="0.99"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/estados_totales"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menucontenedorflotante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"

        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/menuflotante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:tint="@color/white"
            app:backgroundTint="@color/colorSuccess"
            app:fabSize="mini"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:maxImageSize="20dp"
            app:srcCompat="@drawable/recurso_1"
            app:tint="@color/white" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnconexionflotante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:fabSize="mini"
            android:tint="@color/white"
            app:backgroundTint="@color/colorSuccess"
            app:layout_constraintTop_toBottomOf="@id/menuflotante"
            app:layout_constraintEnd_toEndOf="@id/menuflotante"
            app:maxImageSize="20dp"
            app:srcCompat="@drawable/conexion"
            app:tint="@color/white"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tvconexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:layout_marginStart="10dp"
            android:text="Conexión"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            android:background="@drawable/fab_text_bg"
            app:layout_constraintBottom_toBottomOf="@id/btnconexionflotante"
            app:layout_constraintStart_toEndOf="@id/btnconexionflotante"
            app:layout_constraintTop_toTopOf="@id/btnconexionflotante"
            android:visibility="invisible"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnfiltrosflotante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:tint="@color/white"
            app:backgroundTint="@color/colorSuccess"
            app:layout_constraintTop_toBottomOf="@id/btnconexionflotante"
            app:layout_constraintEnd_toEndOf="@id/btnconexionflotante"
            app:maxImageSize="20dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/check"
            app:tint="@color/white"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tvfiltros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:layout_marginStart="10dp"
            android:text="Filtros"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            android:background="@drawable/fab_text_bg"
            app:layout_constraintBottom_toBottomOf="@id/btnfiltrosflotante"
            app:layout_constraintStart_toEndOf="@id/btnfiltrosflotante"
            app:layout_constraintTop_toTopOf="@id/btnfiltrosflotante"
            android:visibility="invisible"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btncoloresflotante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:backgroundTint="@color/colorSuccess"
            app:layout_constraintTop_toBottomOf="@id/btnfiltrosflotante"
            app:layout_constraintEnd_toEndOf="@id/btnfiltrosflotante"
            app:maxImageSize="20dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/pincel"
            app:tint="@color/white"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tvcolores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:layout_marginStart="10dp"
            android:text="Diseño"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            android:background="@drawable/fab_text_bg"
            app:layout_constraintBottom_toBottomOf="@id/btncoloresflotante"
            app:layout_constraintStart_toEndOf="@id/btncoloresflotante"
            app:layout_constraintTop_toTopOf="@id/btncoloresflotante"
            android:visibility="invisible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>